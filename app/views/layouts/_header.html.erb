<div class="navbar navbar-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to "Social University", root_path, id: "logo", :class=>"brand" %>
          <%= form_tag("/search", :method => "get", :class => "navbar-search pull-left") do %>
            <input type="text" class="search-query" placeholder="Search for courses" name="query" value="<%=params[:query] %>">
          <% end %>
      <nav class="nav-collapse">
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li><%= link_to "Courses", admin_mode? ? manage_courses_path : my_courses_path %></li>
