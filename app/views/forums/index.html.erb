<div class="container-fluid">
</br>
<div class="row-fluid">
<div class="span6">
<% if @course.id %>
	<h3>Course Name: <%= @course.name %></h2>
<% end %>
</br>
<h4>Forums</h4>
</div>
</div>

<div class="row-fluid">
	<div class="span10"></div>
	<% if can? :create, Forum %>
	<div class="span2">
	<% if @course.id %>
		<p><%= link_to "Create a New Forum", :controller => "forums", :action => "new", :course_id => @course, :class => "btn" %></p>
	<% else %>
		<p><%= link_to "Create a New Forum", new_forum_path, :class => "btn" %></p>
	<% end %>
  	</div>
	<% end %>
<div class="span12">
<div class="table table-hover">
<body>
<table class=" table-bordered table-striped">
  <tr>
    <th width="40%">Categories</th>
    <th width="10%">Topics</th>
    <th width="10%">Posts</th>
    <th width="40%">Last Post</th>
  </tr>
  
  <% for forum in @forums %>
  	<% posts = 0 %>
	<% for topic in forum.topics %>
		<% posts += topic.forumposts.count %>
	<% end %>
    <tr>
	<td><h4><%= link_to h(forum.name), forum_path(forum.id) %></h4>
		<%=h forum.description %></td>
	<td><%= forum.topics.count %></td>
	<td><%= posts%></td>
	<td class="right">
		<% if forum.most_recent_topic %>
			<%= distance_of_time_in_words_to_now forum.most_recent_topic.created_at %> ago by
			<%= link_to forum.most_recent_topic.user.name, forum.most_recent_topic.user %>
		<% else %>
			No Topics
		<% end %>
	</td>
	
    </tr>
  <% end %>
      
</table>
</body>
</div>
</div>
</div>

</br></br>


</div>

