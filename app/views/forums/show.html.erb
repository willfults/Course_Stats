<div class="container-fluid">
</br>

<div class="row-fluid">
<div class="span6">
<% if @course.id %>
	<h3>Course Name: <%= @course.name %></h2>
<% end %>
<h4> Forum Name: <%= @forum.name %> </h2>
</br>
<h4>Topics</h4>
</div>
</div>

</br></br>

<div class="row-fluid">
<div class="span12">
<div class="table table-hover">
<body>
<table class="table-bordered table-striped">
	<tr>
		<th width="50%">Topic</th>
		<th width="10%">Replies</th>
		<th width="10%">Created</th>
		<th width="30%">Last Reply</th>
	</tr>
	<% for topic in @forum.topics %>
	<tr>
		<td><%= link_to h(topic.name), topic_path(topic.id) %>
		<td><%= topic.forumposts.count %></td>
		<td></td>
		<td class="right">
			<%= distance_of_time_in_words_to_now topic.last_post_at %> ago by
			<%= link_to topic.user.name, topic.user %>
		</td>
		
	</tr>
	<% end %>
</table>
</body>
</div>
</div>
</div>

</br></br>

<div>
	<% if can? :create, Topic %>
		<%= link_to "New Topic", :controller=>"topics", :action=>"new", :forum_id=>@forum %>
		&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
	<% end %>
		
	<%= link_to "Back to Forum List", :controller=>"forums", :action=>"index", :course_id=>@forum.course_id %>

</div>

</div>

