<div class="container-fluid">
  <%= form_for @course, :html => {:multipart => true} do |f| %>

  <ul class="nav nav-tabs">
    <li class="active">
      <% if @course.id%>
      <%= link_to 'Basic Info', edit_course_path(@course) %>
      <% else %>
      <%= link_to 'Basic Info', new_course_path %>
      <% end %>
    </li>
    <% if @course.id%>
    <li>
      <%= link_to 'Modules', course_course_modules_path(@course) %>
    </li>
    <% end %>
  </ul>
  <% if @course.errors.any? %>
  <div class="row-fluid"><div class="span12">
    <div id="error_explanation">
      <ul>
        <% @course.errors.full_messages.each do |msg| %>
        <li>
          <%= msg %>
        </li>
        <% end %>
      </ul>
    </div>
  </div></div>
  <% end %>
  <div class="row-fluid">
    <div class="span6">
      <%= f.label :name %>
      <%= f.text_field :name, :class=>'input-full' %>

      <%= f.label :description %>
      <%= f.text_area :description, :class=>'input-full' %>

    </div>

    <div class="span6">

      <%= f.label 'Tag List (Comma Separated)'%>
      <%= f.autocomplete_field :tag_list, autocomplete_tag_name_courses_path, :"data-delimiter" => ', ', :class=>'input-text'  %>

      <%= f.label :category %>
      <%= select :course, :category, [['Choose One', ''], ['Comedy', 'Comedy'], ['Education', 'Education'], ['Entertainment', 'Entertainment']],{}, { :class => 'input-full' } %>

      <%= f.label :privacy %>
      <%= select :course, :privacy, [["Choose One", ""], ["Public", "Public"], ["Private", "Private"]],{},{ :class => 'input-full' } %>
    </div>
    <div class="actions">
      <%= f.submit "Save", :class => "btn btn-primary" %>
      <% if @course.id && !@course.published %>
        <%= f.submit "Publish and Save", :name => "publish", :class => "btn btn-success", :confirm => "Are you sure you want to Publish?" %>
      <% elsif @course.id && @course.published %>
        <%= f.submit "Un-Publish and Save", :name => "un_publish", :class => "btn btn-warning", :confirm => "Are you sure you want to Un-Publish?" %>
      <% end %>
      
      <% if @course.id %>
        <%= render :partial => 'courses/share_on_facebook' %>
      <% else %>
        <%= "You can share on Facebook after you save." %>
      <% end %>
    </div>

  </div>

  <% end %>
</div>
